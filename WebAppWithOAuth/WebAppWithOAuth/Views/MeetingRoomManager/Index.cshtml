@model IEnumerable<WebAppWithOAuth.Models.BookingNew>

@{
    ViewBag.Title = "Index";
}

@if (TempData["DeleteError"] != null)
{
    <script>
        alert("@TempData["DeleteError"]");
    </script>
    {
        TempData["DeleteError"] = null;
    }
}
<h2>Bookings</h2>

<p>
    <a class="btn btn-default" href="@Url.Action("Create")" style="color: #fff; background-color: #e69857; border-color: #e37312;background-image: linear-gradient(#e69857, #e37312)">Book Now &raquo;</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookingId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </th>
        <th>VC</th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmpId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookingTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BookingId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomNumber)
        </td>
        <td>
            @if (item.RoomNumber.Contains("2C1"))
            {
                <img src="~/Content/Images/tv.png" width="16" height="16" />
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmpId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookingTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.BookingId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BookingId }) |*@
            @Html.ActionLink("Delete", "Delete", new {id = item.BookingId})
        </td>
    </tr>
}

</table>
